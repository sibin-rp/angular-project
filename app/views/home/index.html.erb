
<div ng-controller="MyController1">
  <div class="search">
  	<h1>Members</h1>
  	<label>Search</label>
  	<input ng-model="query1" placeholder="search for Members" autofocus>
  </div>				




<div class="row">
  <div class="col-sm-6 col-md-4" ng-repeat="item1 in users | filter:query1">
    <div class="thumbnail">
      <img src= "{{ item1.avatar_url }}"" class="img-responsive" alt="">
      <div class="caption">
        <h3>{{ item1.login }}</h3>
        
        <p><a href="#" class="btn btn-primary" role="button">Details</a> </p>
      </div>
    </div>
  </div>
</div>
  

</div>



<div ng-controller="MyController2">
  <div class="search">
  	<h1>REPOSITORIES</h1>
  	<label>Search</label>
  	<input ng-model="query2" placeholder="search for repositories" >
  </div>				

<div class="row">
    <div class="col-sm-3" ng-repeat="item2 in repos | filter:query2">
    	<h5>{{ item2.name }}</h5>
    </div>
</div>	
 
	
  

</div>




